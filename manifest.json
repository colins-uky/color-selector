{
    "manifest_version": 3,
    "name": "Color Selector",
    "description": "Grab color codes from webpages. (rgb, hex)",
    "version": "1.0",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/color_selector-16.png",
            "32": "images/color_selector-32.png",
            "64": "images/color_selector-64.png",
            "128": "images/color_selector-128.png"
        }
    },
    "icons": {
        "16": "images/color_selector-16.png",
        "32": "images/color_selector-32.png",
        "64": "images/color_selector-64.png",
        "128": "images/color_selector-128.png"
    },
    "permissions": ["activeTab", "scripting"]
}
